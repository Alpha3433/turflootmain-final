# TurfLoot Production Environment Configuration Template
# Copy this file to .env.production and fill in the production values

# Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Database Configuration (MongoDB Atlas)
MONGO_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
DB_NAME=turfloot_production

# Application URLs (Update with your production domain)
NEXT_PUBLIC_BASE_URL=https://your-production-domain.com

# Authentication & Security
JWT_SECRET=<generate-strong-jwt-secret-for-production>

# Privy Configuration (Production App)
NEXT_PUBLIC_PRIVY_APP_ID=<your-production-privy-app-id>
PRIVY_APP_SECRET=<your-production-privy-app-secret>

# Blockchain Configuration (Mainnet)
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
HELIUS_WEBSOCKET_URL=wss://atlas-mainnet.helius-rpc.com

# Ethereum Configuration (Mainnet with proper API key)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/<your-alchemy-api-key>
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/<your-alchemy-api-key>

# Game Configuration
NEXT_PUBLIC_GAME_MODE=multiplayer
NEXT_PUBLIC_MAX_PLAYERS=6
NEXT_PUBLIC_TICK_RATE=30

# Features
NEXT_PUBLIC_FEATURES=multiplayer,blockchain,chat,achievements,customization,anti-cheat

# Performance
NEXT_PUBLIC_CACHE_DURATION=300
NEXT_PUBLIC_MAX_CONNECTIONS=1000

# Geo-blocking (enable for production if needed)
NEXT_PUBLIC_GEO_MODE=disabled

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Production Configuration
NEXT_PUBLIC_TESTING_MODE=false
NEXT_PUBLIC_MOCK_WALLET_BALANCE=false

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=10
MIN_DEPOSIT_SOL=0.01
MIN_CASHOUT_SOL=0.05
MIN_CASHOUT_USD=20

# Security Headers
DISABLE_X_POWERED_BY=true
NEXT_TELEMETRY_DISABLED=1