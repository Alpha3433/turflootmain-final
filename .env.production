# Production Environment Configuration for TurfLoot
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Database Configuration - MongoDB Atlas
# These will be injected by the deployment system
MONGODB_URI=${MONGODB_URI}
MONGO_URL=${MONGODB_URI}
DB_NAME=turfloot_production

# Application URLs (injected by deployment)
NEXT_PUBLIC_BASE_URL=${NEXT_PUBLIC_BASE_URL}

# Authentication & Security (injected by deployment)
JWT_SECRET=${JWT_SECRET}

# Privy Configuration (injected by deployment)
NEXT_PUBLIC_PRIVY_APP_ID=${NEXT_PUBLIC_PRIVY_APP_ID}
PRIVY_APP_SECRET=${PRIVY_APP_SECRET}

# Blockchain Configuration - Production
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Game Configuration
NEXT_PUBLIC_GAME_MODE=multiplayer
NEXT_PUBLIC_MAX_PLAYERS=6
NEXT_PUBLIC_TICK_RATE=30

# Features
NEXT_PUBLIC_FEATURES=multiplayer,blockchain,chat,achievements,customization,anti-cheat

# Performance
NEXT_PUBLIC_CACHE_DURATION=300
NEXT_PUBLIC_MAX_CONNECTIONS=1000

# Production Settings
NEXT_PUBLIC_GEO_MODE=disabled
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_TESTING_MODE=false
NEXT_PUBLIC_MOCK_WALLET_BALANCE=false

# Build optimization
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=true
DISABLE_ESLINT_PLUGIN=true
GENERATE_SOURCEMAP=false
DISABLE_OPENCOLLECTIVE=true